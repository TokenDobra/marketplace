<div class="order-form">
  <div class="container">
    <form name="myForm" action="/order_artwork" onsubmit="return validateForm()" method="post">
       <ul class="flex-outer">
          <li>
            <label for="fullname">Full Name</label>
            <input type="text" name="fullname" placeholder="Enter your full name" required >
  
          </li>
          <li>
            <label for="phone">Phone</label>
            <input type="tel" name="phone" placeholder="Enter your phone number" required pattern="[\+()]*(?:\d[\s\-\.()xX]*){10,14}">
          </li>
          <li>
            <label for="email">Email</label>
             <input type="text" name="email" placeholder="Enter your email" required pattern="[^@\s]+@[^@\s]+\.[^@\s]+" title="Invalid email address">
          </li>
          <li>
            <input type="checkbox" name="agree" required >&nbsp;&nbsp;&nbsp;
            <label for="agree">I agree with the <a href='/termsofservivce' target='_blank'>User Agreement</a> and the <a href='/privacy' target='_blank'>Personal Data Processing Policy</a></label>
          </li>



          <li>
            <input type="hidden" name="source" value="{{position.source}}">
            <input type="hidden" name="quantity" value="{{quantity}}">
            <input type="hidden" name="price" value="{{price}}">
            <input type="hidden" name="artwork" value="{{artwork.viewasset.name}}">


            <button class='order-button'>Pay</button>
          </li>
        </ul>
     </form>
   </div>
</div>
