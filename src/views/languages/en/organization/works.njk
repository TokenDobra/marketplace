    <div class="nfts">
        <div class="container">
                {% for item in organization.offers %}

            <div onclick="location.href='/artwork?uuid={{item.offer}}'" class="item-nft">
                <div class="bg"></div>
                <img src="{{item.image_link}}" alt="">
                <div class="tips">
                    <span class="tool tip"
                        data-tool="By making a donation on our website, you will receive pre-NFT. This is a voucher that reserves the NFT of the selected artwork for you">
                        <p>pre-NFT</p>
                    </span>
                    <span class="tool tip"
                        data-tool="This artwork can be purchased in original">
                        <p>Original</p>
                    </span>
                </div>
                <div class="bottom">
                    <p class="name">{{item.viewasset.name}}</p>
                    <div class="info">
                        <div class="stats">
                            <p class="price">{{item.token.price}} $</p>
                            <p class="tip">{{item.viewperson.fullname}}</p>
                        </div>
                            <div class="progress-bar">
                                <div class="bar" style="width: {{item.token.progress}}%;"></div>
                            </div>
                        <span
                            data-tool="This artwork is digitized in the amount of {{item.token.issue}} tokens"
                            class="tool">
                            <p class="count tip2"><span>{{item.token.sold}}</span> / {{item.token.issue}}</p>
                        </span>
                    </div>
                </div>
            </div>
{% endfor %}

        </div>
    </div>

